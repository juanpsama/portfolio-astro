---
import { Image } from 'astro:assets';
import ProfileImage from '../../public/face.jpg';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="stylesheet"  href="https://fonts.googleapis.com/css?family=Roboto+Mono">
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<div class="flex flex-col md:flex-row justify-center items-center mt-14">
				
				<div class="h-40 w-40">
					
					<Image src={ProfileImage} alt='Dont Work' width = 400 height=400 class= "rounded-full h-full w-full object-cover">

					</Image>
					<!-- <img src="/face.jpg" alt="" class="rounded-full h-full w-full object-cover"> -->
				</div>
		
				<div class="block px-10">
					<span>
						<h2 class="text-teal text-shadow-teal" ><b>Juan P. Samayoa</b></h2>
						<h5 class="mx-3 text-shadow-teal text-indigo">Developer</h5>
					</span>
			
					<div class="inline-flex text-neutral-500 ">
						<a class="mx-3 hover:text-neutral-700 hover:underline decoration-2 decoration-pink-300 " aria-current="page" href="/">About me</a>
						<a class="mx-3 hover:text-neutral-700 hover:underline decoration-2 decoration-pink-300" href="/projects">Projects</a>
						<a class="mx-3 hover:text-neutral-700 hover:underline decoration-2 decoration-pink-300" href="/contact">Contact me</a>
					</div>
			
				</div>
			</div>
		</nav>
		<!-- <hr class="h-px my-2 mx-12 border-0 bg-gray-200 dark:bg-gray-700"> -->
		
		<slot />
	</body>

</html>
<style is:global>
	:root {
		/* CSS HEX */
		--indigo-dye: #053c5eff;
		--red: #db222aff;
		--teal: #1f7a8cff;
		--madder: #a31621ff;
		--columbia-blue: #bfdbf7ff;
		--brigth-pink: #F56476ff;
		--teal: #1f7a8cff;
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: 'Roboto Mono', system-ui, sans-serif;
		background: whitesmoke;
		background-size: 224px;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
	}
	h2 { 
		font-size: 2rem; 
	}
	
	h5 { 
		font-size: 1.5rem; 
	}
	
	p { font-size: 1rem; }
	
	.bg-indigo{
		background-color: var(--indigo-dye);
	}
	.bg-madder{
		background-color: var(--madder);
	}
	.bg-pink{
		background-color: var(--brigth-pink);
	}
	.text-indigo{
		color: var(--indigo-dye);
	}
	.text-teal{
		color: var(--teal);
	}
	.text-shadow-teal{
		text-shadow: 0px 0px 3px var(--teal);  
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
