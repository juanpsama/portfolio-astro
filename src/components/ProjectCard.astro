---
interface Props {
	title: string;
	image: string;
    description ?: string;
}

const { image, title, description} = Astro.props;
---

<div class="rounded-lg shadow-lg bg-stone-50 text-indigo mx-2 hover:mx-0">
    <img class="w-full rounded-t-lg" src={image} alt="Project image">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2">{title}</div>

      <div class="rounded-full bg-cyan-900 inline-block px-2 text-stone-50 text-xs">Python</div>
      <div class="rounded-full bg-cyan-900 inline-block px-2 text-stone-50 text-xs">Python</div>

      <p class="text-grey-darker text-base leading-normal">{description}</p>
    </div>

    <div class="px-6 py-4 flex justify-center align-bottom ">

        <button class="bg-cyan-900 hover:bg-cyan-950 text-stone-50 font-bold py-2 px-4 rounded mx-2">
          Button 
        </button>

        <button class="bg-cyan-900 hover:bg-cyan-950 text-stone-50 font-bold py-2 px-4 rounded mx-2">
          Button
        </button>
    </div>
  </div>
  